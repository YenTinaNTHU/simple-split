import pandas as pd
from lib.googleSheets import GoogleSheets

def addGroup(group_id: str, reply_token:str):
    sheet = GoogleSheets()
    sheet.appendWorksheet(
        spreadsheetId='1rAse3CL3uO_sfMRh1g9YRg_4POeeLi10SMv3467EeIw',
        range='global',
        df=pd.DataFrame(
            {
                'group_id': group_id,
                'reply_token': reply_token,
            }
        )
    )


